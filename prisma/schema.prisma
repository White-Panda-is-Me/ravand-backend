generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email  String @unique
  id        Int @id @default(autoincrement())
  CreatedAt DateTime @default(now())
  Activated Boolean @default(false)

  hash String
  token String @unique
  signin_password String
  time Int

  fName String
  lName String

  tasks Plan[]

  @@map("users")
}

model Plan {
  planid String @unique

  userUUID  String
  name      String
  starts    DateTime
  ends      DateTime
  date      DateTime
  tasks     Task[]

  User      User @relation(fields: [userUUID] ,references: [token])
}

model Task {
  taskid   String @unique

  name     String
  imp      Int
  min      Int
  planUUID String

  plan     Plan @relation(fields: [planUUID] ,references: [planid]) 
}