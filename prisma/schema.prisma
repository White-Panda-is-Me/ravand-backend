generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email     String @unique
  id        Int @id @default(autoincrement())
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime

  hash String

  fName String
  lName String

  plans Plan[]

  @@map("users")
}

model Plan {
  planid String @unique

  starts    String
  ends      String
  blocked1  String[]
  blocked2  String[]
  date      DateTime
  UserId    Int

  User      User @relation(fields: [UserId] ,references: [id])
}

model vers {
  id     Int @id @default(autoincrement())
  token  String @unique
  email  String
  signed Boolean
  expire DateTime
  code   String
}