generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email     String @unique
  id        Int @id @default(autoincrement())
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime

  hash String

  fName String
  lName String

  plans Plan[]

  @@map("users")
}

model Plan {
  planid String @unique

  UserId    Int
  name      String
  starts    DateTime
  ends      DateTime
  date      DateTime
  tasks     Task[]

  User      User @relation(fields: [UserId] ,references: [id])
}

model Task {
  taskid   String @unique

  name     String
  imp      Int
  min      Int
  planUUID String

  plan     Plan @relation(fields: [planUUID] ,references: [planid]) 
}

model vers {
  id     Int @id @default(autoincrement())
  token  String @unique
  email  String @unique
  signed Boolean
  expire DateTime
  code   String
}